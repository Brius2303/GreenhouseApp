<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenhouseApp.ControlPage"
             BackgroundColor="#c1dbaf"
             Title="Управление теплицей">
    <ScrollView>
        <StackLayout x:Name="MainStackLayout"
                     Padding="20"
                     Spacing="15">
            <Frame CornerRadius="10"
                   BackgroundColor="#302f31"
                   Padding="10">
                <Picker x:Name="GreenhousePicker"
                        Title="Выберите теплицу"
                        FontSize="18"
                        TextColor="White"
                        BackgroundColor="Transparent" />
            </Frame>
            <!-- Additional UI elements will be added programmatically -->
        </StackLayout>
    </ScrollView>
</ContentPage>