<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenhouseApp.SensorsPage"
             BackgroundColor="#c1dbaf"
             Title="Показатели датчиков">
    <StackLayout Padding="20">
        <Frame CornerRadius="10"
       BackgroundColor="Black"
       Padding="1"
       Margin="0,10">
            <Frame CornerRadius="10"
           BackgroundColor="#302f31"
           Padding="10">
                <Picker x:Name="GreenhousePicker"
                Title="Выберите теплицу"
                FontSize="18"
                TextColor="White"
                BackgroundColor="Transparent" />
            </Frame>
        </Frame>


        <Frame CornerRadius="10"
               Padding="1"               
               BackgroundColor="Black"
               Margin="0,10">
            <Frame Padding="10" CornerRadius="10" BackgroundColor="#302f31">
                <StackLayout>
                    <Label Text="Температура (°C):" FontSize="18" />
                    <Label x:Name="TemperatureLabel" FontSize="24" Text="--" />
                </StackLayout>
            </Frame>
        </Frame>

        <Frame CornerRadius="10"
               Padding="1"               
               BackgroundColor="Black"
               Margin="0,10">
            <Frame Padding="10" CornerRadius="10" BackgroundColor="#302f31">
                <StackLayout>
                    <Label Text="Влажность воздуха (%):" FontSize="18" />
                    <Label x:Name="HumidityLabel" FontSize="24" Text="--" />
                </StackLayout>
            </Frame>
        </Frame>

        <Frame CornerRadius="10"
               Padding="1"               
               BackgroundColor="Black"
               Margin="0,10">
            <Frame Padding="10" CornerRadius="10" BackgroundColor="#302f31">
                <StackLayout>
                    <Label Text="Влажность почвы (%):" FontSize="18" />
                    <Label x:Name="SoilMoistureLabel" FontSize="24" Text="--" />
                </StackLayout>
            </Frame>
        </Frame>

        <Frame CornerRadius="10"
               Padding="1"               
               BackgroundColor="Black"
               Margin="0,10">
            <Frame Padding="10" CornerRadius="10" BackgroundColor="#302f31">
                <StackLayout>
                    <Label Text="Уровень CO2 (ppm):" FontSize="18" />
                    <Label x:Name="CO2Label" FontSize="24" Text="--" />
                </StackLayout>
            </Frame>
        </Frame>

      
        
    </StackLayout>
</ContentPage>
